<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_currency_margin_start"
    android:layout_marginTop="@dimen/item_currency_margin_top"
    android:background="@drawable/item_currency_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/item_currency_padding">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_bold"
        android:textColor="@color/item_currency_title_text_color"
        android:textSize="30sp"
        tools:text="AUD" />

    <TextView
        android:id="@+id/textView_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_currency_rate_margin_top"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/item_currency_rate_text_color"
        android:textSize="20sp"
        tools:text="59.22 â‚½" />

</LinearLayout>